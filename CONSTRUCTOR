// ***** CONSTRUCTOR METHOD FOR SINGLY LINKED LIST *****


public class LinkedList {

	private Node head;
	private Node tail;
	private int length;
	
	class Node{
	    int value;
	    Node next;
	    
       Node(int value){
          this.value=value;
       }
	}
	
	LinkedList(int value){
	    Node newNode=new Node(value);
	    head=newNode;
	    tail=newNode;
	    length=1;
	}
  }
public class Main {

    public static void main(String[] args) {

        LinkedList myLinkedList = new LinkedList(4);

  }
}
