public class LinkedLists {
    Node head;
    Node tail;
    int length;

    class Node{
        int value;
        Node next;

        Node(int value){
            this.value=value;

        }

    }
    LinkedLists(int value){
        Node newNode=new Node(value);
        head=newNode;
        tail=newNode;
        length=1;
    }
    //print lists
    public void printList(){
        Node temp=head;
        while(temp!=null){
            System.out.println(temp.value);
            temp=temp.next;
        }
    }
    //append-add item to the end of linked list COMPLEXITY: O(1)
    public void append(int value){
        Node newNode=new Node(value);
        if(length==0){
            head=newNode;
            tail=newNode;
        }
        else{
            tail.next=newNode;
            tail=newNode;
        }
        length++;
    }
    // remove last element COMPLEXITY:O(n)
    public Node removeLast(){
        if(length==0){
            return null;
        }
        Node temp=head;
        Node pre=head;
        while(temp.next!=null){
            pre=temp;
            temp=temp.next;

        }
        tail=pre;
        tail.next=null;
        length--;
        if(length==0){
            head=null;
            tail=null;
        }
        return temp;
    }
    //prepend-add element to the beginning of the list COMPLEXITY:O(1)
    public void prepend(int value){
        Node newNode=new Node(value);
        if(length==0){
            head=newNode;
            tail=newNode;

        }else {
            newNode.next = head;
            head = newNode;
        }
        length++;
    }
    //remove first element of the list COMPLEXITY:O(1)
    public Node removeFirst(){
        if(length==0) return null;
        Node temp=head;
        head=head.next;
        temp.next=null;
        length--;
        if(length==0){
            head=null;
        }
        return temp;
    }
}
public class Main {
    public static void main(String[] args) {
        LinkedLists myLinkedLists=new LinkedLists(1);
        System.out.println("*** Initial linked list is ***");
        myLinkedLists.printList();

        myLinkedLists.append(2);
        myLinkedLists.append(3);
        myLinkedLists.append(4);
        System.out.println("*** After appending the linked list is ***");
        myLinkedLists.printList();

        myLinkedLists.removeLast();
        System.out.println("*** After removing last item the linked list is ***");
        myLinkedLists.printList();
        System.out.println("THE ITEM REMOVED WAS "+myLinkedLists.removeLast().value);
        System.out.println("THE ITEM REMOVED WAS "+myLinkedLists.removeLast().value);
        System.out.println("THE ITEM REMOVED WAS "+myLinkedLists.removeLast().value);
        System.out.println("THE ITEM REMOVED WAS "+myLinkedLists.removeLast());
        myLinkedLists.prepend(5);
        System.out.println("*** After prepending the linked list is ***");
        myLinkedLists.printList();
        //again append
        myLinkedLists.append(2);
        myLinkedLists.append(3);
        myLinkedLists.append(4);

        myLinkedLists.removeFirst();
        System.out.println("*** After removing first item the linked list is ***");
        myLinkedLists.printList();


        }
    }
